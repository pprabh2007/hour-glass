<%= content_tag :h1, "Hello, TA #{current_user.name}!" %>

<%= form_for @calendar, url: create_office_hour_teaching_assistants_path, local: true do |form| %>
  <% if @calendar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h2>
      <ul>
        <% @calendar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :courseName %>
    <%= form.select :courseName, options_for_select(@your_classes), {}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>

  <div class="field">
    <%= form.label :recurrence, "Recurring Office Hour" %>
    <%= form.check_box :recurrence, { checked: false } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

</br>
<%= link_to 'Back to Profile Page', user_profile_path, :class => 'btn btn-primary col-2' %>
